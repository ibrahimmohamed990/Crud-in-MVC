@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 >All User</h1>
<br />
<a asp-action="SignUp" asp-controller="Account" class="btn btn-primary">Create New User</a>
<br />
<br />
<form class="my-3" asp-action="Index" asp-controller="Users" enctype="multipart/form-data">
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="Search..." name="SearchValue" class="form-control" value="@ViewBag.SearchValue" />
        </div>
        <div class="col-sm-4">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </div>
</form>

@if (Model?.Count() > 0)
{
    <table class="table">
        <thead class="table-dark">
            <tr>
                <th scope="col">User ID</th>
                <th scope="col">User Name</th>
                <th scope="col">Email</th>

                <th scope="col">Details</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>

                    <td>
                        <a class="btn btn-success" asp-controller="Users" asp-action="Details" asp-route-id="@item.Id">
                            <i class="bi bi-info-circle"></i> Details
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-info" asp-controller="Users" asp-action="Update" asp-route-id="@item.Id">
                            <i class="btn-toolbar"></i> Update
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-controller="Users" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="btn-danger"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h2>No Users Found!!</h2>
    </div>
}

