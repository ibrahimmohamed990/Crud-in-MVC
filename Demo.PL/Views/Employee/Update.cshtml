@* @model EmployeeViewModel *@
@{
    ViewData["Title"] = "Update";
}
<style>
    
    .image-container {
        position:absolute;
        width: 300px;
        height: 300px;
        object-fit: cover; 
        border-radius: 50%; 
        border: 5px solid #fff; 
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        top:120px;
        right:120px;
        display: flex;
    }

    .custom-label {
        width: 900px; /* Set the width as needed */
        height: 30px; /* Set the height as needed */
        display: inline-block; /* Ensures inline behavior with width and height */
        padding: 5px; /* Optional: Add padding for spacing within the label */
    }
    .custom-input {
        width: 900px; /* Set the width as needed */
        height: 30px; /* Set the height as needed */
        display: inline-block; /* Ensures inline behavior with width and height */
        padding: 5px; /* Optional: Add padding for spacing within the label */
    }
</style>
<form asp-action="Update" asp-controller="Employee" enctype="multipart/form-data">
    
    <partial name="Partial Views/CreateOrUpdatePartialView" />
    <br />
    <button type="submit" value="Add" class="btn btn-primary">Submit</button>
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



