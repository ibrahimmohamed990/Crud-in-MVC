@model EmployeeViewModel
@{
    var DepartmentName = ViewData["DepartmentName"];
}
<style>
    
    .image-container {
        position:absolute;
        width: 300px;
        height: 300px;
        object-fit: cover; 
        border-radius: 50%; 
        border: 5px solid #fff; 
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        top:120px;
        right:120px;
        display: flex;
    }

    .custom-label {
        width: 900px; /* Set the width as needed */
        height: 30px; /* Set the height as needed */
        display: inline-block; /* Ensures inline behavior with width and height */
        padding: 5px; /* Optional: Add padding for spacing within the label */
    }

    
    .custom-input {
        width: 900px; /* Set the width as needed */
        height: 30px; /* Set the height as needed */
        display: inline-block; /* Ensures inline behavior with width and height */
        padding: 5px; /* Optional: Add padding for spacing within the label */
    }
</style>
<div class="row">
    <div class="col-l2">
        <div class="form-group" >
            <img src="~/Files/Images/@Model.ImageUrl" class="image-container" alt="Employee Image"/>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Id" class="col-form-label custom-label"></label>
            <input asp-for="@Model.Id" class="form-control custom-input" readonly>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Name" class="col-form-label custom-label">Employee Name</label>
            <input asp-for="@Model.Name" class="form-control custom-input" readonly>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Address" class="col-form-label custom-label"></label>
            <input asp-for="@Model.Address" class="form-control custom-input" readonly>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Email" class="col-form-label custom-label"></label>
            <input asp-for="@Model.Email" class="form-control custom-input" readonly>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Salary" class="col-form-label custom-label"></label>
            <input asp-for="@Model.Salary" class="form-control custom-input" readonly>
        </div>
        <div class="form-group">
            <label asp-for="@Model.HireDate" class="col-form-label custom-label"></label>
            <input asp-for="@Model.HireDate" class="form-control custom-input" readonly>
        </div>
        <div class="form-group">
            <label asp-for="@DepartmentName" class="col-form-label custom-label">Department Name</label>
            <input asp-for="@DepartmentName" class="form-control custom-input" readonly>
        </div>
        <div class="form-group">
            <label asp-for="@Model.IsActive" class="form-check-label">Is Active</label>
            <input class="form-ckeck-input"  asp-for="@Model.IsActive" readonly disabled/>
        </div>
        <br />
        <a class="btn btn-info" asp-action="Update" asp-route-id="@Model.Id">Update</a>
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
        <a asp-action="Index" class="btn btn-light">Back To List</a>
    </div>
</div>