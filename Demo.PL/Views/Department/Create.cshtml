@model DepartmentViewModel
@{
    ViewData["Title"] = "Create";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["WarningMessage"] != null)
{
    <div class="alert alert-warning">
        @TempData["WarningMessage"]
    </div>
}
<form asp-action="Create" asp-controller="Department">
    <div class="form-group">
        <label asp-for="@Model.Code" class="col-form-label">Code</label>
        <input asp-for="@Model.Code" class="form-control" placeholder="Enter Code">
        <span asp-validation-for="@Model.Code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Name" class="col-form-label">Name</label>
        <input asp-for="@Model.Name" class="form-control" placeholder="Enter Department Name">
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" value="Add" class="btn btn-primary">Submit</button>
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}


