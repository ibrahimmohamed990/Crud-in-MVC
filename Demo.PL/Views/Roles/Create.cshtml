@model ApplicationRole
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Create" asp-controller="Roles">
    <div class="form-group">
        <label asp-for="@Model.Name" class="col-form-label">Name</label>
        <input asp-for="@Model.Name" class="form-control" placeholder="Enter Role Name">
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
    
    <br />
    <button type="submit" value="Add" class="btn btn-primary">Submit</button>
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


